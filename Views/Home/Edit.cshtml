@using delicious.Models
@model Dish

<button><a href="/">Home</a></button>
<h3>Edit @Model.Name</h3>
<form asp-action="Update" asp-controller="Home" method="post">
  <span asp-validation-for="Name"></span>
  <label asp-for="Name"></label>
  <input asp-for="Name">
  <br>
        
  <span asp-validation-for="Chef"></span>
  <label asp-for="Chef"></label>
  <input asp-for="Chef">
  <br>

  <span asp-validation-for="Calories"></span>
  <label asp-for="Calories"></label>
  <input asp-for="Calories">
  <br>

  <span asp-validation-for="Tastiness"></span>
  <label asp-for="Tastiness"></label>
  <select name="Tastiness">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <br>

  <span asp-validation-for="Description"></span>
  <label asp-for="Description"></label>
  <textarea asp-for="Description"></textarea>
  <br>

  <input value="Edit Dish" type="submit">    
  </form>